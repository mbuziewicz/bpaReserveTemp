@model BpaReserve.Pages.Rides.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ride[0].RideName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ride[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ride[0].WaitTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ride[0].RideImageUrl)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Ride) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RideName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WaitTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RideImageUrl)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.RideID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.RideID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.RideID">Delete</a>
            </td>
        </tr>
}
    </tbody>
